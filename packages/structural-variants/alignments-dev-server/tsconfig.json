{
  "compilerOptions": {
    "target": "ES2024",
    "module": "nodenext",
    "lib": ["ES2024"],
    "skipLibCheck": true,
    "baseUrl": "/",

    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "moduleDetection": "force",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "src/*": [
        "src/*",
      ]
    }
  },
  "include": ["src"]
}